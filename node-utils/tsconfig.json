{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "outDir": "out"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
